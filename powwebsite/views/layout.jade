  body
    div(id='header' class='col-xs-12 col-sm-12 col-md-12 col-lg-12')
      nav(class='navbar navbar-inverse navbar-fixed-top')
        div(class='container')
          div(class='navbar-header')
            button(type='button' class='navbar-toggle collapsed' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
              span(class='sr-only')
                | Toggle navigation
              span(class='icon-bar')
              span(class='icon-bar')
              span(class='icon-bar')

            a(class='navbar-brand' href='/')
              | LeafyExchange

          div(id='navbar' class='navbar-collapse collapse')
            ul(class='nav navbar-nav' id='header-bar')
              li(class='dropdown')
                  a(href='#' data-toggle='dropdown' class='dropdown-toggle')
                    if (typeof(stateChosen) !== 'undefined')
                      = stateChosen
                    else
                      | Choose State
                    b(class='caret')

                  ul(class='dropdown-menu')
                    div(class='row' style='width:500px')
                      if (typeof(states) !== 'undefined')
                        - index = 0
                        each state in states
                          if (typeof(state) === 'undefined' || state != stateChosen)
                            if (index % 10 == 0)
                              if (index > 0)
                                | </ul>
                              | <ul class='list-unstyled col-md-4'>
                            - ++index
                            li(class='list-unstyled')
                              | <a href='/state/
                              = state
                              | '>
                              = state
                              | </a>

                      li(class='divider')
                      li
                        a(href='/state/all')
                          | All States
                      | </ul>
              li
                form(class='navbar-form')
                  div(class='form-group')
                    | <input type='text' placeholder='Location (Ex: 420 Pontius Ave N, Seattle, WA, 98103)' class='form-control'>
                  button(type='submit' class='btn btn-success')
                    | Search

    div(id='title' class='col-xs-12 col-sm-12 col-md-12 col-lg-12 text-center')
      h1(style='font-size:2em; font-weight:bold; color:#369844')
        | The Best Source for Marijuana Prices and Information

    block content

    <!-- FOOTER -->
    div(id='footer' class='col-xs-12 col-sm-12 col-md-12 col-lg-12')
      hr(class='featurette-divider col-xs-12 col-sm-12 col-md-12 col-lg-12')

