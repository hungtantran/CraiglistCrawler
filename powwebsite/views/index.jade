extends layout

block content
    div(class='row' id ='content')
      div(id='left_pane' class='col-xs-12 col-sm-12 col-md-7 col-lg-9')
        div(id='map-canvas')

        div(id='price_bin' class='hidden-xs')
          div(id='price_bin_dist_by_state')

      div(class='clearfix visible-xs-block')

      div(id='right_pane' class='col-xs-12 col-sm-12 col-md-5 col-lg-3')
        table(id='latest_prices_content' class='table table-striped table-condensed table-responsive')
          thead
            tr
              th
                | Date Posted
              th
                | Locations
              th
               | Quantities
              th
                | Prices
        div(id='right_pane_content')
          table(id='latest_prices_content' class='table table-striped table-condensed table-responsive')
            tbody(id='table_body')
              each posting in postings
                if (posting['city'])
                  tr
                    td
                    td
                      = posting['city']
                    td
                      if (posting['quantity'] == null || posting['unit'] == null)
                        | Check Quantity!
                      else
                        = posting['quantity'] + ' ' + posting['unit']
                    td
                      != '<a href="/posting/'
                      = posting['url']
                      != '"">'
                      if (posting['price'] == null)
                        | Check Price!
                      else
                        | $
                        = posting['price']
                      != '</a>'



    script(type='text/javascript')
      | var map = null;
      | var markerClusterer = null;
      | var markerArray = [];

      | var cache = [];

      | var mapBound = null;
      | var stateFilter = null;
      | window.onload = loadData();
