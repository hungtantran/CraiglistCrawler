doctype html
html
  head
    title= title
    link(rel='stylesheet', type='text/css', href='/stylesheets/index.css')
    script(type='text/javascript' src="http://d3js.org/d3.v3.min.js")
    script(type='text/javascript' src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js" charset="utf-8")
    script(type='text/javascript', src='/javascripts/common.js')
    script(type='text/javascript')
      | var mapBound = null;
      | var stateFilter = null;
      | var map = null;
      | window.onload = loadData(map);

  body
    div(id='header')
      | Header

    div(id='content')
      div(id='left_pane')
        | Average Price by State
        div(id='map-canvas')

        div(id='price_bin')
          div(id='price_bin_dist_by_state')

          div(id='price_per_unit')
            | Price (per gram) (bin)

      div(id='right_pane')
        div(id='right_pane_header')
          | Latest Prices
        div(id='right_pane_content')
          table(id='latest_prices_content')
            tr
              td(id='locations')
                | Locations
              td(id='quantities')
                | Quantities
              td(id='prices')
                | Prices
            each posting in postings
              if (posting['city'])
                tr
                  td(id='locations')
                    = posting['city']
                  td(id='quantities')
                    = posting['quantity'] + ' ' + posting['unit']
                  td(id='prices')
                    != '<a href="/posting/'
                    = posting['id']
                    != '">$'
                    = posting['price']
                    != '</a>'

    div(id='footer')
      | Footer