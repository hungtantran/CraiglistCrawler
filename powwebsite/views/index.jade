    div(id='content')
      div(id='left_pane')
        div(id='map-canvas')

        div(id='price_bin')
          div(id='price_bin_dist_by_state')

          div(id='price_per_unit')
            | Price (per gram) (bin)

      div(id='right_pane')
        div(id='right_pane_header')
          | Latest Prices
        div(id='right_pane_content')
          table(id='latest_prices_content')
            tr
              td(id='locations')
                | Locations
              td(id='quantities')
                | Quantities
              td(id='prices')
                | Prices
            each posting in postings
              if (posting['city'])
                tr
                  td(id='locations')
                    = posting['city']
                  td(id='quantities')
                    = posting['quantity'] + ' ' + posting['unit']
                  td(id='prices')
                    != '<a href="/posting/'
                    = posting['id']
                    != '">$'
                    = posting['price']
                    != '</a>'

